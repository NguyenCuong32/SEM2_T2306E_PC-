<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ProductViewer.ViewModels;assembly=ProductViewer"
             x:Class="ProductViewer.MainPage">

    <ContentPage.BindingContext>
        <vm:ProductViewModel />
    </ContentPage.BindingContext>

    <StackLayout>
        <Label Text="Thông Tin Sản Phẩm" HorizontalOptions="Center" FontSize="Large" Margin="0,20,0,10" />

        <ListView ItemsSource="{Binding Products}" VerticalOptions="FillAndExpand">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10">
                            <Label Text="{Binding ProductName}" FontSize="Medium" />
                            <Label Text="{Binding Price, StringFormat='Giá: {0:C}'}" FontSize="Small" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
