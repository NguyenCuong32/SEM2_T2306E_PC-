<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.ProductPage"
             Title="ProductPage">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <CollectionView x:Name="ProductCollection" ItemsSource="{Binding products}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10">
                        <Label FontSize="18" Text="{Binding id}"/>
                        <Label HorizontalOptions="Center" VerticalOptions="Center" FontSize="18" Text="{Binding name}"/>
                        <Label HorizontalOptions="Center" VerticalOptions="Center" FontSize="18" Text="{Binding price}"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>